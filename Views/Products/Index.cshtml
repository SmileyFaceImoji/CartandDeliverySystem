@model List<Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Our Products</h1>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New Product
            </a>
        }
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <!-- Product Image -->
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                            <span class="text-white">No Image</span>
                        </div>
                    }
                    
                    <div class="card-body">
                        <!-- Product Name -->
                        <h5 class="card-title">@product.Name</h5>
                        
                        <!-- Price -->
                        <p class="card-text text-primary fw-bold">@product.Price.ToString("C")</p>
                        
                        <!-- Stock Availability -->
                        @if (product.Stock > 0)
                        {
                            <p class="text-success">In Stock (@product.Stock available)</p>
                        }
                        else
                        {
                            <p class="text-danger">Out of Stock</p>
                        }
                    </div>
                    
                    <div class="card-footer bg-white border-0 d-flex justify-content-between">
                        <!-- Details Button -->
                        <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-primary">
                            <i class="bi bi-info-circle"></i> Details
                        </a>
                        
                        <!-- Add to Cart Form -->
                        <form asp-controller="Cart" asp-action="AddToCart" method="post">
                            <input type="hidden" name="productId" value="@product.Id" />
                            <div class="input-group">
                                <input type="number" name="quantity" value="1" min="1" max="@product.Stock" 
                                       class="form-control" style="width: 60px;" @(product.Stock <= 0 ? "disabled" : "")>
                                <button type="submit" class="btn btn-success" @(product.Stock <= 0 ? "disabled" : "")>
                                    Add to Cart
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>